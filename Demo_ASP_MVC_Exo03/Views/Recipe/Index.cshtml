@model IEnumerable<Demo_ASP_MVC_Exo03.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Ajouter une nouvelle recette</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td class="text-truncate" style="max-width: 50ch;">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.Id">&#127828;</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">&#128465;</a>
            </td>
        </tr>
}
    </tbody>
</table>
